<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:background="@color/radiant_red"

    tools:context=".PlayActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/play_btn"
        android:src="@drawable/quizzard_logo">
    </ImageView>

    <Button
        android:id="@+id/play_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_confirm_blue"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/sign_out_btn"
        android:text="@string/btn_play"
        android:textColor="@color/white">
    </Button>


    <Button
        android:id="@+id/sign_out_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_btn_confirm"
        android:text="@string/btn_sign_out"
        android:textColor="@color/raisin_black"
        android:layout_marginBottom="32dp">
    </Button>
</RelativeLayout>